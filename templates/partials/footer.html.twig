<footer>

	<div class="footer__top">
		
		<div class="footer__nav">

			<ul>
		    {% for p in pages.children.visible %}
		    	<li>
		    		{% set active = p.active ? 'active' : '' %}
		    		<a href="{{ p.url }}" class="{{ active }}">{{ p.menu }}</a>
			    	{% if p.children.visible %}
			    	<ul>
			        	{% for p in p.children.visible %}
			        	{% set active = p.active ? 'active' : '' %}
			        	<li><a href="{{ p.url }}" class="{{ active }}">{{ p.menu }}</a></li>
			        	{% endfor %}
			    	</ul>
			    	{% endif %}
		    	</li>
			{% endfor %}
			</ul>

		</div>

		<div class="footer__address">
			<H2>{{ "THEME.ADDRESS.TITLE"|t }}</H2>
			<div>{{ "THEME.ADDRESS.STREETADDRESS"|t }}</div>
		</div>

		<div class="footer__newsletter">
			<!-- Begin Mailchimp Signup Form -->
			<div id="mc_embed_signup">
			<form action="https://calotte.us8.list-manage.com/subscribe/post?u=f6e1c8a243d159fe2acbb0061&amp;id=c6129c1226" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
			    <div id="mc_embed_signup_scroll">
			    <h2>{{ "THEME.MAILCHIMP.TITLE"|t }}</h2>
			<div class="mc-field-group">
			    <input type="email" value="" name="EMAIL" class="required email" required id="mce-EMAIL" placeholder="{{ "THEME.MAILCHIMP.EMAIL"|t }}">
			</div>
			    <div id="mce-responses" class="clear">
			        <div class="response" id="mce-error-response" style="display:none"></div>
			        <div class="response" id="mce-success-response" style="display:none"></div>
			    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_f6e1c8a243d159fe2acbb0061_c6129c1226" tabindex="-1" value=""></div>
			    <div class="clear"><input type="submit" value="{{ "THEME.MAILCHIMP.SUBMIT"|t }}" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
			    </div>
			</form>
			</div>
			<!--End mc_embed_signup-->
		</div>

	</div>

	<div class="footer__bottom">
		<div class="legal">
			<span class="copyright">Â© {{ site.title }} {{ "now"|date("Y") }}</span>
			<a class="terms" href="{{page.find('/termes-et-conditions').url}}">{{ "THEME.LEGAL.TERMS"|t }}</a>
		</div>
		{% include 'partials/credit.html.twig' %}
	</div>

</footer>
